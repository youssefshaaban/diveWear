<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.product_details.ProductDetailsActivity">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="@dimen/_5sdp"
            android:background="@drawable/back_bottom_raduis"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:id="@+id/back"
                android:layout_marginEnd="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/neo_sans_medium"
                android:textColor="@color/white"
                android:textSize="@dimen/txt14"
                android:text="@string/productDetails"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:id="@+id/tittle"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_bell"
                android:layout_gravity="center"
                android:id="@+id/notification"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/_5sdp"
                    android:textSize="@dimen/txt16"
                    android:textColor="@color/black"
                    android:padding="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:fontFamily="@font/neo_sans_medium"
                    android:text="@string/title_description"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:padding="@dimen/_5sdp"
                    android:maxLines="3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/description"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/title_quentity"
                        android:textSize="@dimen/txt17"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/neo_sans_medium"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/plus"
                            android:src="@drawable/plus_1" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txt17"
                            android:paddingEnd="@dimen/_10sdp"
                            android:textColor="@color/colorPrimary"
                            android:text="0" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/minus"
                            android:src="@drawable/min_1" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/_5sdp"
                    android:background="@color/grey"
                    android:textSize="@dimen/txt16"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/neo_sans_medium"
                    android:text="@string/similarProduct"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycleProduct"
                    android:layout_margin="@dimen/_5sdp"
                    />

                <Button
                    android:layout_width="@dimen/_200sdp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:text="@string/add_cart"
                    android:id="@+id/addCart"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>